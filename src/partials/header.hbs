<header class="main-header">
  {{#if @blog.logo}}
    <a class="blog-logo" href="{{@blog.url}}">
      <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
    </a>
  {{/if}}

  <div class="main-header-content">
    <h1 class="main-header-title">{{@blog.title}}</h1>

    <h2 class="main-header-second-title">$ exec sh</h2>

    <h3 class="main-header-description">{{@blog.description}}</h3>
  </div>

  <a class="scroll-down icon-arrow-left" href="#main-content">
    <span class="hidden">Scroll Down</span>
  </a>
</header>
