[
  {
    "name": "${name}",
    "image": "${image}",
    "cpu": 10,
    "memory": 128,
    "links": [],
    "portMappings": [
      {
        "containerPort": 3000,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "entryPoint": [],
    "command": [],
    "environment": [
      {
        "name": "url",
        "value": "${url}"
      },
      {
        "name": "forwarded_proto_header",
        "value": "cloudfront-forwarded-proto"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "${name}",
        "containerPath": "/var/lib/ghost/content"
      }
    ],
    "volumesFrom": [],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "$${awslogs-group}",
        "awslogs-region": "$${awslogs-region}",
        "awslogs-stream-prefix": "$${awslogs-stream-prefix}"
      }
    }
  }
]
